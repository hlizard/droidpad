<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <item android:top="2dp">
                <shape>
                    <corners android:radius="5dp" />
                    <gradient android:centerColor="#000000"
                              android:centerX="0.01"
                              android:centerY="0.999"
                              android:endColor="#A9A9A9"
                              android:startColor="#99CCCC"
                              android:type="sweep" />

                </shape>
            </item>
            <item android:bottom="0dp"
                  android:left="0dp"
                  android:right="0dp">
                <shape>
                    <corners android:radius="5dp" />
                    <solid android:color="#AADCDCDC" />
                </shape>
            </item>

        </layer-list>

    </item>
    <item>
        <layer-list>
            <item android:top="2dp">
                <shape>
                    <corners android:radius="5dp" />
                    <gradient android:centerColor="#000000"
                              android:centerX="0.01"
                              android:centerY="0.999"
                              android:endColor="#A9A9A9"
                              android:startColor="#99CCCC"
                              android:type="sweep" />

                </shape>
            </item>
            <item android:bottom="4dp"
                  android:left="2dp"
                  android:right="2dp">
                <shape>
                    <corners android:radius="5dp" />
                    <solid android:color="#80CCFFFF" />
                </shape>
            </item>

        </layer-list>

    </item>

</selector>